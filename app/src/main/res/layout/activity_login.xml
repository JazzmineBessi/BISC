<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="user"
            type="com.example.myapplication.Model.User" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:bind="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.MainActivity">

        <EditText
            android:id="@+id/login"
            android:layout_width="382dp"
            android:layout_height="47dp"
            android:layout_margin="15dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/round_border"
            android:drawableStart="@drawable/ic_baseline_mail_24"
            android:drawablePadding="16dp"
            android:hint="login"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/mdp"
            app:layout_constraintHorizontal_bias="0.62"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="@+id/mdp"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/mdp"
            android:layout_width="377dp"
            android:layout_height="45dp"
            android:layout_margin="15dp"
            android:background="@drawable/round_border"
            android:drawableStart="@drawable/ic_motdepasse"
            android:drawablePadding="16dp"
            android:hint="Mot de passe"
            android:padding="16dp"
            app:layout_constraintBottom_toTopOf="@+id/login"
            app:layout_constraintHorizontal_bias="0.735"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.858" />

        <Button
            android:id="@+id/connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/roundbg"
            android:text="se connecter"
            android:textSize="16sp"
            android:textStyle="italic"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="170dp"
            tools:layout_editor_absoluteY="529dp" />

        <View
            android:id="@+id/topview"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginBottom="50dp"
            android:background="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <View
            android:id="@+id/view2"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:background="@drawable/ic_wave__1_"
            app:layout_constraintBottom_toTopOf="@+id/mdp"
            tools:layout_editor_absoluteX="0dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="91dp"
            android:layout_height="111dp"
            app:srcCompat="@drawable/ic_person"
            tools:layout_editor_absoluteX="304dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/textview"
            android:layout_width="226dp"
            android:layout_height="105dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="152dp"
            android:text="Bienvenue Dans Votre  Espace Client "
            android:textColor="#F6F6F6"
            android:textIsSelectable="true"
            android:textSize="24sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toStartOf="@+id/imageView"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="66dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>